<html>

<head>
  <title> ToDo App </title>
  <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>

  <div class="container">
    <div class="bg-danger box text-white" id="heading">
      <h2><%= listTitle %></h2>
      <h6><%= kindOfday %></h6>
    </div>

    <div class="box">

      <form action="/" method="POST">

        <input type="text" name="listTodo" placeholder="New Task">
        <button class="addButton bg-secondary" name="list" value="<%= listTitle %>"> + </button>
      </form>

    </div>

    <div class="grid-layout row">

      <div class="taskbox col-lg-4 container">
        <h2> Task </h2>
        <hr />
        <% if(item.length===0) { %>
        <p>No Task Available</p>
        <%} else{ %>
        <% for( var i = 0; i < item.length; i++){ %>
        <% if(item[i].isCompleted===false) { %>

        <form action="/remove" method="POST">
          <div class="item">
            <input class="checkmark" type="checkbox" name="check" value="<%= item[i]._id %>" onChange="this.form.submit()" />
            <p><%= item[i].name %></p>
          </div>
          <% } } } %>
          <input type="hidden" name="listNametitle" value="<%= listTitle %>"></input>
        </form>

      </div>


      <div class="taskbox col-lg-4 container">
        <h2> Completed task </h2>
        <hr />
        <% if(item.length===0) { %>
        <p>No Completed Tasks</p>
        <% } else {%>
        <% for(var i = 0; i < item.length; i++){ %>
        <% if(item[i].isCompleted===true){ %>
        <form action="/removeall" method="post">
          <div class="item">
            <input class="checkmark" type="checkbox" name="completedCheck" value="<%= item[i]._id %>" checked />
            <%= item[i].name %>
          </div>
          <% } } }  %>
          <hr />
          <button class="btn btn-danger" type="submit">Clear all</button>
          <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
      </div>


    </div>




  </div>
  <div class="footer">
    <p class="text-black">Made by Pearlin</p>
  </div><br>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>

</html>